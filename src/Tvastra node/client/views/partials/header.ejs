<header>
    <a href="/">
        <img class="logo" id="logo" src="https://s3.ap-south-1.amazonaws.com/appdev.konfinity.com/css/tasks/Logo.jpg"
            alt="Logo">
    </a>
    <nav>
        <a href="#" class="hide-desktop">
            <i id="barIcon" class="fas fa-bars menu-bar"></i>
        </a>
        <ul id=nav-ul class="show-desktop hide-mobile">
            <li id="exit-menu" class="exit-menu hide-desktop"><i class="fa fa-times"></i></li>
            <li><a href="/doctors">Doctors</a></li>
            <li><a href="hospital.html">Hospitals</a></li>
            <li><a href="treatment.html">Treatments</a></li>
            <% // <li><a href="#">Other Services</a></li> %>
            <li><a href="about-us.html">About</a></li>
        </ul>
        <div class="nav-cta hide-mobile">
            <% if(!(currentUser && currentUser.username)) { %>
                <a href="/login">
                    <button class="login-btn">Login / Signup</button>
                </a>
            <% } else {%>
                <a href="tvastra-plus">
                    <button class="login-btn">Tvastra Plus</button>
                </a>
            <% } %>
            <a href="get.html">
                <button class="getQuote-btn">Get a Quote</button>
            </a>
        </div>
        <% if(currentUser && currentUser.username) { %>
            <div class="user-container" onclick="toggleUserDetails()">
                <div class="user-heading">
                    <h5><%= currentUser.username.slice(0,8) %>..</h5>
                    <i class="fas fa-angle-down"></i>
                </div>
                <div id="user-details" class="user-details user-hide">
                    <div class="user-info">
                        <div class="user-img">
                            <img src="<%= currentUser.image %>" alt="">
                        </div>
                        <div class="user-name-mobile">
                            <h5><%= currentUser.username %></h5>
                            <h6><%= currentUser.mobile %></h6>
                        </div>
                    </div>
                    <ul>
                        <li>
                            <a href="#">My Appointments</a>
                        </li>
                        <li>
                            <a href="#">My Lab Tests</a>
                        </li>
                        <li>
                            <a href="#">My Medicine Orders</a>
                        </li>
                        <li>
                            <a href="#">My Payments</a>
                        </li>
                        <li>
                            <a href="#">Logout</a>
                        </li>
                    </ul>
                </div>  
            </div>
        <% } %>
    </nav>
</header>

<div class="flash-container">
    <% if(success && success.length>0) { %>
        <div id="flash-msg" class="flash-msg success-msg">
            <i class="fas fa-check-circle msg-icon"></i>
            <div class="msg-content success-content">
                <h4>Success</h4>
                <p><%= success %></p>
            </div>
            <i id="hide-flash" class="fa fa-times hide-msg-icon"></i>
        </div>
    <% } %>
    <% if(error && error.length>0) { %>
        <div id="flash-msg" class="flash-msg failure-msg">
            <i class="fa fa-times-circle msg-icon" aria-hidden="true"></i>
            <div class="msg-content failure-content">
                <h5>Failure</h5>
                <p><%= error %></p>
            </div>
            <i id="hide-flash" class="fa fa-times hide-msg-icon"></i>
        </div>
    <% } %>
</div>
<script>
    function toggleUserDetails() {
        document.getElementById("user-details").classList.toggle("user-hide");
    }
</script>