<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Sign Up</title>

    <link rel="stylesheet" type="text/css" href="stylesheets/reset.css">
    <link rel="stylesheet" type="text/css" href="stylesheets/root.css">
    <link rel="stylesheet" type="text/css" href="stylesheets/header.css">
    <link rel="stylesheet" type="text/css" href="stylesheets/signup.css">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.0/css/all.css"
        integrity="sha384-lZN37f5QGtY3VHgisS14W3ExzMWZxybE1SJSEsQp9S+oqd12jhcu+A56Ebc1zFSJ" crossorigin="anonymous">
    <!-- <link rel="stylesheet" type="text/css" href="stylesheets/help-query.css"> -->
    <!-- <link rel="stylesheet" type="text/css" href="stylesheets/footer.css"> -->

</head>

<body>

    <!-- Header starts -->
    <%- include("partials/header") %>
    <!-- Header Ends -->

    <!-- Sign Up Section -->
    <section class="signup-section">
        <div class="signup-wrapper">
            <h1>Sign Up</h1>
            <form action="/signup" method="post" class="signup-form">

                <input type="text" name="user[username]" required placeholder="Enter Name">
                <input type="email" name="user[email]" required placeholder="Enter Email">

                <input type="password" name="user[password]" required placeholder="Enter Password">
                <select name="user[gender]" id="gender" required>
                    <option value="">Select your gender</option>
                    <option value="Male">Male</option>
                    <option value="Female">Female</option>
                    <option value="Others">Others</option>
                </select>
                <input type="date" name="user[dob]" id="dob" placeholder="dd/mm/yyyy" value="dd/mm/yyyy">
                <input type="number" name="user[mobile]" id="mobile" required placeholder="Enter Phone Number">
                <div class="city-state-input">
                    <input type="text" name="user[city]" placeholder="Enter City">
                    <input type="text" name="user[state]" placeholder="Enter State">
                </div>
                <select name="user[country]" id="country" required>
                    <option value="">Select your Country</option>
                    <option value="India">India</option>
                    <option value="USA">USA</option>
                    <option value="Russia">Russia</option>
                </select>
                <div class="doc-check-input">
                    <input type="checkbox" name="user[isDoctor]" id="doctor" value="true">
                    <label for="doctor">Are you a Doctor?</label>
                </div>
                <button type="submit">Sign Up
                    <i class="fas fa-arrow-right"></i>
                </button>
            </form>
            <h5>Already Registered?
                <a href="/login">Login</a>
            </h5>
        </div>
    </section>

    <!-- Footer  -->
    <footer class="footer">
        <p class="copyright">All Rights Reserved. &copy; tvastra 2020</p>
    </footer>

    <script src="scripts/flash.js"></script>
    <script src="scripts/script.js"></script>
</body>

</html>